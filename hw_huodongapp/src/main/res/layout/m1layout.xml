<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/m1bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/fff"
        android:padding="20dp"
        android:src="@drawable/hwlogo1"
        android:layout_width="220dp"
        android:layout_height="100dp" />

<LinearLayout
    android:id="@+id/rtrt"
    android:orientation="vertical"
    android:background="@color/sssssss"
    android:layout_below="@+id/fff"
    android:layout_width="match_parent"
    android:layout_height="260dp">

    <ImageView
        android:padding="20dp"
        android:src="@drawable/lgffrrr"
        android:layout_width="260dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        android:text="智能进化  平台应变"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="华为中国生态之行2019"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>


    <TextView
        android:layout_below="@+id/rtrt"
        android:textColor="@color/dfdfsf"
        android:textSize="20sp"
        android:layout_toLeftOf="@+id/ghhhh"
        android:text="构建万物互联的"
        android:layout_marginRight="12dp"
        android:layout_marginTop="82dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ghhhh"
        android:layout_below="@+id/rtrt"
        android:textColor="@color/dfdfsf"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:text="智 能 世 界"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/ghhhh"
        android:layout_alignParentRight="true"
        android:layout_width="410dp"
        android:layout_height="800dp">

        <Button
            android:text="议 程 信 息"
            android:textSize="38sp"
            android:textStyle="bold"
            android:onClick="bck1"
            android:textColor="@color/dfdfsf"
            android:background="@drawable/jiaohu321"
            android:layout_width="250dp"
            android:layout_height="130dp" />

        <Button
            android:text="会 场 地 图"
            android:textSize="38sp"
            android:textStyle="bold"
            android:onClick="bck2"
            android:layout_marginTop="90dp"
            android:textColor="@color/dfdfsf"
            android:background="@drawable/jiaohu321"
            android:layout_width="250dp"
            android:layout_height="130dp" />

        <Button
            android:text="颜 值 评 分"
            android:textSize="38sp"
            android:onClick="bck3"
            android:textStyle="bold"
            android:layout_marginTop="90dp"
            android:textColor="@color/dfdfsf"
            android:background="@drawable/jiaohu321"
            android:layout_width="250dp"
            android:layout_height="130dp" />


    </LinearLayout>

</RelativeLayout>